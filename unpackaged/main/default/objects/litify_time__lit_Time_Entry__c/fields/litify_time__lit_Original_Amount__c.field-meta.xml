<?xml version="1.0" encoding="UTF-8"?>
<CustomField xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>litify_time__lit_Original_Amount__c</fullName>
    <deprecated>false</deprecated>
    <formula>IF(OR(    
                        ISPICKVAL(litify_time__lit_Rate__r.litify_time__lit_Rate_Type__c, &#39;Fixed&#39;), 
                        ISPICKVAL(litify_time__lit_Rate__r.litify_time__lit_Rate_Type__c, &#39;Flat Fee&#39;)
                    ),
                litify_time__lit_Applied_Rate__c,
                litify_time__lit_Applied_Rate__c * litify_time__lit_Billing_Duration__c/3600
    )</formula>
    <formulaTreatBlanksAs>BlankAsZero</formulaTreatBlanksAs>
    <label>Original Amount</label>
    <precision>18</precision>
    <required>false</required>
    <scale>2</scale>
    <trackHistory>false</trackHistory>
    <trackTrending>false</trackTrending>
    <type>Currency</type>
</CustomField>
