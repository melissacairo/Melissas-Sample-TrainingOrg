<apex:page showHeader="true" sidebar="true" standardController="litify_pm__Questionnaire__c" 
						extensions="litify_pm.GenerateSampleQuestionnairesController" recordSetVar="questionnaires">

	<apex:pageMessages />
	<apex:form >	
		<apex:outputPanel rendered="{! $User.UIThemeDisplayed == 'Theme3' }">
			<apex:sectionHeader subtitle="Generate Sample Questionnaire" title="Questionnaire generator"/>
			
			<apex:pageBlock title="Confirm">
				<apex:pageBlockSection columns="1">
					<apex:outputText value="Would you like to generate a sample questionnaire?"/>					
	      </apex:pageBlockSection>
	      
				<apex:pageBlockButtons location="bottom">
	        <apex:commandButton action="{!submit_generate}" value="Yes, generate data"/>
					<apex:commandButton action="{!cancel}" value="Go back"/>
	      </apex:pageBlockButtons>

			</apex:pageBlock>					
			
		</apex:outputPanel>
		<apex:outputPanel rendered="{! $User.UIThemeDisplayed == 'Theme4d' }">
			<apex:stylesheet value="{!URLFOR($Resource.litify_pm__slds, 'assets/styles/salesforce-lightning-design-system-vf.css')}" />
			<div class="litify slds">
				<div class="slds-grid">
					<span class="slds-text-heading--medium slds-m-bottom--large">Generate Sample Questionnaire</span>
				</div>
				<div class="slds-grid">
					<span class="slds-text-heading--small slds-m-bottom--large">Confirm</span>
				</div>
				<div class="slds-grid">
					<apex:outputText value="Would you like to generate a sample questionnaire?"/>
				</div>
				<div class="slds-grid">
					<apex:commandButton action="{!submit_generate}" value="Yes, generate data" styleClass="slds-button slds-button--brand" style="max-width:200px; min-width:150px;"/>
        	<apex:commandButton action="{!cancel}" value="Go back" immediate="true" styleClass="slds-button slds-button--neutral" />
				</div>
			</div>
		</apex:outputPanel>
	</apex:form>
</apex:page>